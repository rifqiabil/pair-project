<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <script src="https://cdn.jsdelivr.net/npm/ez-invoice/index.min.js"></script>
  </head>
  <body>
    <%- include('../partials/_navbar') %>

    <div class="mt-5"> <h1 style="text-align: center;">Invoice Page</h1></div>

    <script>
      const options = {
        storeName: "MOBIL GAYA",
        tax: 10,
        currency: "$",
        paymentMode: `${data.paymentMethod}`,
        location: `${data.shippingAddress}`,
        invoiceID: `${data.uniqueKey}`,
      };

      let items = [
        {
          name: `${data.Car.name}`,
          quantity: 1,
          beforeTax: parseFloat(data.Car.price),
          price: parseFloat(data.Car.price),
        },
      ];

      const invoiceCanvas = createInvoice(options, items);

      document.body.appendChild(invoiceCanvas);
    </script>
  </body>
</html>
